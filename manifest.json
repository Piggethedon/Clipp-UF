{
  "manifest_version": 3,
  "name": "Clipp",
  "version": "1.0.0",
  "description": "Spara pengar smartare – automatiskt. Clipp hittar och applicerar rabattkoder för svenska butiker.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://zalando.se/*",
    "https://adlibris.com/*", 
    "https://lyko.com/*",
    "https://cdon.se/*",
    "https://tradera.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zalando.se/*",
        "https://adlibris.com/*", 
        "https://lyko.com/*",
        "https://cdon.se/*",
        "https://tradera.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipp - Spara pengar smartare",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["clipp-popup.html", "clipp-popup.js", "clipp-popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}